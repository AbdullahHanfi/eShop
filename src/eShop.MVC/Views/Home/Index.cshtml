@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
@section style {
    <style>
        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 4rem 0;
            color: white;
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
                animation: float 20s infinite linear;
            }

        @@keyframes float {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            animation: fadeInUp 0.8s ease-out;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            opacity: 0.95;
            margin-bottom: 2rem;
            animation: fadeInUp 0.8s ease-out 0.2s;
            animation-fill-mode: both;
        }

        .hero-btn {
            background: white;
            color: #667eea;
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            animation: fadeInUp 0.8s ease-out 0.4s;
            animation-fill-mode: both;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

            .hero-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0,0,0,0.3);
                color: #764ba2;
            }

        /* Featured Products Section */
        .featured-section {
            padding: 4rem 0;
            background: #f8fafc;
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .section-subtitle {
            text-align: center;
            color: #64748b;
            margin-bottom: 3rem;
            font-size: 1.1rem;
        }

        /* Product Cards */
        .product-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
            position: relative;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 24px rgba(0,0,0,0.1);
            }

        .product-image-wrapper {
            position: relative;
            padding-top: 75%; 
            overflow: hidden;
            background: #f3f4f6;
        }

        .product-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .product-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: #ef4444;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            z-index: 1;
        }

        .product-content {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .product-category {
            color: #64748b;
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .product-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.5rem;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-description {
            color: #64748b;
            font-size: 0.875rem;
            line-height: 1.6;
            margin-bottom: 1rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            flex: 1;
        }

        .product-rating {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .stars {
            color: #fbbf24;
            margin-right: 0.5rem;
        }

        .rating-value {
            color: #64748b;
            font-size: 0.875rem;
        }

        .product-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: 1rem;
            border-top: 1px solid #e5e7eb;
        }

        .product-price {
            display: flex;
            align-items: baseline;
            gap: 0.5rem;
        }

        .current-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
        }

        .prev-price {
            font-size: 1rem;
            color: #9ca3af;
            text-decoration: line-through;
        }

        .btn-add-cart {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-add-cart:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            }

        /* No Products State */
        .no-products {
            text-align: center;
            padding: 4rem 0;
        }

        .no-products-icon {
            font-size: 4rem;
            color: #e5e7eb;
            margin-bottom: 1rem;
        }

        .no-products-title {
            font-size: 1.5rem;
            color: #64748b;
            margin-bottom: 0.5rem;
        }

        .no-products-text {
            color: #9ca3af;
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in-up {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .hero-section {
                padding: 3rem 0;
            }
        }

        /* Stock indicator */
        .stock-indicator {
            display: flex;
            align-items: center;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

            .stock-indicator.in-stock {
                color: #10b981;
            }

            .stock-indicator.low-stock {
                color: #f59e0b;
            }

            .stock-indicator.out-of-stock {
                color: #ef4444;
            }

        .stock-dot {
            width: 6px;
            height: 6px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }

            .stock-dot.in-stock {
                background: #10b981;
            }

            .stock-dot.low-stock {
                background: #f59e0b;
            }

            .stock-dot.out-of-stock {
                background: #ef4444;
            }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content text-center">
            <h1 class="hero-title">Welcome to eShop</h1>
            <p class="hero-subtitle">Discover amazing products at unbeatable prices</p>
            <a href="/products" class="hero-btn">
                <i class="bi bi-arrow-right-circle me-2"></i>Shop Now
            </a>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-section">
    <div class="container">
        <h2 class="section-title">Featured Products</h2>
        <p class="section-subtitle">Check out our handpicked selection just for you</p>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 fade-in-up">
                        <div class="product-card">
                            @if (product.PrevPrice.HasValue && product.PrevPrice > product.CurrentPrice)
                            {
                                var discount = Math.Round((decimal)((product.PrevPrice.Value - product.CurrentPrice) / product.PrevPrice.Value * 100));
                                <span class="product-badge">-@discount%</span>
                            }

                            <div class="product-image-wrapper">
                                @if (product.Images != null && product.Images.Any())
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(product.Images.First())"
                                         alt="@product.Name"
                                         class=" w-100 h-100 object-fit-scale rounded product-image">
                                }
                                else
                                {
                                    <img src="/assets/placeholder-product.jpg"
                                         alt="@product.Name"
                                         class="w-100 h-100 object-fit-scale rounded product-image">
                                }
                            </div>

                            <div class="product-content">
                                <div class="product-category">@ViewData[product.Name]</div>
                                <h3 class="product-title">@product.Name</h3>
                                <p class="product-description">@product.Description</p>

                                @if (product.Rate > 0)
                                {
                                    <div class="product-rating">
                                        <div class="stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(product.Rate))
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else if (i - 0.5 <= product.Rate)
                                                {
                                                    <i class="fas fa-star-half-alt"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                        </div>
                                        <span class="rating-value">@product.Rate.ToString("0.0")</span>
                                    </div>
                                }

                                <div class="stock-indicator @(product.Quantity > 10 ? "in-stock" : product.Quantity > 0 ? "low-stock" : "out-of-stock")">
                                    <span class="stock-dot @(product.Quantity > 10 ? "in-stock" : product.Quantity > 0 ? "low-stock" : "out-of-stock")"></span>
                                    @if (product.Quantity > 10)
                                    {
                                        <span>In Stock</span>
                                    }
                                    else if (product.Quantity > 0)
                                    {
                                        <span>Only @product.Quantity left</span>
                                    }
                                    else
                                    {
                                        <span>Out of Stock</span>
                                    }
                                </div>

                                <div class="product-footer">
                                    <div class="product-price">
                                        <span class="current-price">$@product.CurrentPrice.ToString("0.00")</span>
                                        @if (product.PrevPrice.HasValue)
                                        {
                                            <span class="prev-price">$@product.PrevPrice.Value.ToString("0.00")</span>
                                        }
                                    </div>
                                    @if (product.Quantity > 0)
                                    {
                                        <button class="btn-add-cart" onclick="addToCart('@product.Id')">
                                            <i class="bi bi-cart-plus"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn-add-cart" disabled style="opacity: 0.5; cursor: not-allowed;">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a href="/products" class="hero-btn">
                    View All Products <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        }
        else
        {
            <div class="no-products">
                <i class="bi bi-bag-x no-products-icon"></i>
                <h3 class="no-products-title">No Products Available</h3>
                <p class="no-products-text">Check back soon for amazing deals!</p>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        function addToCart(productId) {
            // Show loading on button
            event.target.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span>';
            event.target.disabled = true;

            // Simulate adding to cart (replace with actual API call)
            setTimeout(() => {
                // Update cart count
                window.eShopNav.updateCartCount((parseInt(document.getElementById('cartCount').textContent) || 0) + 1);

                // Show success message
                Swal.fire({
                    icon: 'success',
                    title: 'Added to Cart!',
                    text: 'Product has been added to your cart',
                                        showConfirmButton: false,
                    timer: 1500,
                    position: 'top-end',
                    toast: true
                });

                // Reset button
                event.target.innerHTML = '<i class="bi bi-cart-plus"></i>';
                event.target.disabled = false;
            }, 500);
        }

        // Initialize animations on scroll
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in-up');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            // Observe all product cards
            document.querySelectorAll('.col-lg-4').forEach(el => {
                observer.observe(el);
            });
        });

        // Lazy load images
        if ('IntersectionObserver' in window) {
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        img.src = img.dataset.src || img.src;
                        img.classList.add('fade-in');
                        observer.unobserve(img);
                    }
                });
            });

            document.querySelectorAll('.product-image').forEach(img => {
                imageObserver.observe(img);
            });
        }
    </script>
}