@model IEnumerable<eShop.BLL.ViewModels.Order.OrderListViewModel>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Order #</th>
            <th>Customer</th>
            <th>Date</th>
            <th>Items</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Any()){
            @foreach (var order in Model){
                <tr class="order-row" data-order-id="@order.Id">
                    <td class="fw-bold">@order.OrderNumber</td>
                    <td>@order.UserEmail</td>
                    <td>@order.CreatedDate.ToString("MMM dd, yyyy HH:mm")</td>
                    <td><span class="badge bg-info">@order.ItemsCount items</span></td>
                    <td class="fw-bold">$@order.TotalAmount.ToString("N2")</td>

                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary"
                                    onclick="viewOrderDetails('@order.Id')"
                                    title="View Details">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else{
            <tr>
                <td colspan="7" class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3 d-block"></i>
                    <p class="text-muted">No orders found</p>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@Html.AntiForgeryToken()